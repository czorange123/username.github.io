<div class="header">
  <div class="avatar">
    <a href="/username.github.io/"><img src="<%- theme.avatar.author_photo %>" alt=""></a>
    <div class="nickname"><a href="/username.github.io/"><%- theme.avatar.author_nickname %></a></div>
  </div>
  <div class="navbar">
    <ul>
      <%
        for(let item of theme.navbar) {
          if (item.enable) {
      %>
        <li class="nav-item" data-path="<%- item.path %>">
          <a href="<%- item.path %>"><%- item.name %></a>
        </li>
      <%
          }
        }
      %>
    </ul>
  </div>
</div>

<script>
  let navs = document.querySelectorAll('.nav-item');
  let pagePath = window.location.pathname;
  for(let nav of navs) {
    let navPath = nav.getAttribute("data-path");
    if(navPath && navPath === pagePath) {
      nav.className = "nav-item active";
    }
  }
</script>
